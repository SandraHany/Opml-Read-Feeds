@page
@model WebApplication1.Pages.RssModel
@{
    ViewData["Title"] = "RSS";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RSS</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .carousel-control-prev-icon,
        .carousel-control-next-icon {
            background-color: #000;
        }

        .carousel-indicators {
            bottom: -40px;
        }

            .carousel-indicators li {
                background-color: #000; 
            }

            .carousel-indicators .active {
                background-color: #fff; 
            }

        .carousel-caption {
            background-color: rgba(0, 0, 0, 0.6);
            color: #fff;
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 10px;
        }

        .carousel-control-prev {
            margin-left: -100px;
        }

        .carousel-control-next {
            margin-right: -100px;
        }
    </style>
</head>
<body>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="false">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.RssList.Count; i++)
            {
                <div class="carousel-item @(i == 0 ? "active" : "")">
                  
                    <h3>@Model.RssList[i].PubDate</h3>
                    <p>@Html.Raw(@Model.RssList[i].Description)</p>
                 
                    <a class="btn btn-primary" href="@Model.RssList[i].Link" target="_blank">Go to Link</a>
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
        <ol class="carousel-indicators">
            @for (int i = 0; i < Model.RssList.Count; i++)
            {
                <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
            }
        </ol>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
